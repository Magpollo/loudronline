{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "singularName": "post",
    "pluralName": "posts",
    "displayName": "Post",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "postContent": {
      "type": "blocks"
    },
    "title": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "description": {
      "type": "text"
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "postId": {
      "type": "customField",
      "customField": "plugin::field-uuid.uuid"
    },
    "contentType": {
      "type": "enumeration",
      "enum": [
        "arts & design",
        "music",
        "tech",
        "gaming",
        "afroculture"
      ]
    },
    "creator": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::creator.creator",
      "inversedBy": "posts"
    },
    "post_categories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::post-category.post-category",
      "mappedBy": "posts"
    },
    "headerImage": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": false,
      "required": true
    },
    "tags": {
      "type": "text"
    }
  }
}
